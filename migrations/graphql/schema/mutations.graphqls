  #     Ticket
  # -----------------------------------------------------------------------------------------
  createTicket(input: CreateOrderTicketInput!): OrderTicket!   #@role(roles: ["user","admin"])
  updateTicket(input: UpdateOrderTicketInput!): OrderTicket!   #@role(roles: ["user","admin"])

  # Product
  createProduct(input: CreateProductInput): Product!   #@role(roles: ["admin"])
  updateProduct(input: UpdateProductInput): Product!   #@role(roles: ["admin"])
  deleteProduct(input: DeleteProductInput): Product!   #@role(roles: ["admin"])



  # OutOfStockOrder
  createOutOfStockOrder(input: CreateInventoryOrderInput!): InventoryOrder!   #@role(roles: ["admin"])
  updateOutOfStockOrder(input: UpdateInventoryOrderInput!): InventoryOrder!   #@role(roles: ["admin"])
